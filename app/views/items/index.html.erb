<p id="notice"><%= notice %></p>

<h1>Items</h1>
<%= form_tag(items_path, method: :get) do %>
    <%= text_field_tag :item %>
    <%= submit_tag 'Search', name: nil %>
<% end %><br>
<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Item status</th>
      <th>Tag type</th>
      <th>Item category</th>
      <th>Serial number</th>
      <th>Vendor</th>
      <th>Building</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_name %></td>
        <td><%= item.item_status.availability %></td>
        <td><%= item.tag_type.tag_type %></td>
        <td><%= item.item_category.category %></td>
        <td><%= item.serial_number %></td>
        <td><%= item.vendor.vendor_name %></td>
        <td><%= item.building.building_name %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
