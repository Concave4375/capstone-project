<p id="notice"><%= notice %></p>
<style>
  td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }
</style>
<h1>Listing Zips</h1>

<table>
  <thead>
    <tr>
      <th>Zipcode</th>
    </tr>
  </thead>

  <tbody>
    <% @zips.each do |zip| %>
      <tr>
        <td><%= zip.zipcode %></td>
        <td><%= link_to 'Show', zip %></td>
        <td><%= link_to 'Edit', edit_zip_path(zip) %></td>
        <td><%= link_to 'Delete', zip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Zip', new_zip_path %>
