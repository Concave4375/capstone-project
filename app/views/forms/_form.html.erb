    <%= f.label :item_movability_id %><br>
    <%= f.collection_select :item_movability_id, ItemMovability.all, :id, :movable %>
  </div>
  <div class="field">
    <%= f.label :item_id %><br>
    <%= f.collection_select :item_id, Item.all, :id, :item_name %>
  </div>
  <div class="field">
    <%= f.label :item_condition %><br>
    <%= f.text_field :item_condition %>
  </div>
  <div class="field">
    <%= f.label :loan_date %><br>
    <%= f.datetime_select :loan_date %>
  </div>
  <div class="field">
    <%= f.label :due_date %><br>
    <%= f.datetime_select :due_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
