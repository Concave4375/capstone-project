<p id="notice"><%= notice %></p>

<style>
  td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }
</style>

<h1>Forms</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Item movability</th>
      <th>Item</th>
      <th>Item condition</th>
      <th>Loan date</th>
      <th>Due date</th>
    </tr>
  </thead>

  <tbody>
    <% @forms.each do |form| %>
      <tr>
        <td><%= form.user_id %></td>
        <td><%= form.item_movability_id %></td>
        <td><%= form.item_id %></td>
        <td><%= form.item_condition %></td>
        <td><%= form.loan_date %></td>
        <td><%= form.due_date %></td>
        <td><%= link_to 'Show', form %></td>
        <td><%= link_to 'Edit', edit_form_path(form) %></td>
        <td><%= link_to 'Delete', form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

